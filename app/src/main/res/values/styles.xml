<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/nyTimesColorPrimary</item>
        <item name="colorPrimaryDark">@color/nyTimescolorPrimaryDark</item>
        <item name="colorAccent">@color/nyTimescolorcolorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- NYTimes application theme. -->
    <style name="NYTimesAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/nyTimesColorPrimary</item>
        <item name="colorPrimaryDark">@color/nyTimescolorPrimaryDark</item>
        <item name="colorAccent">@color/nyTimescolorcolorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
